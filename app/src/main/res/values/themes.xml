<resources>
    <!-- Base application theme. -->
    <style name="Theme.Ecommerce" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white_background</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textColorSecondary">@color/color_secondary</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>   <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/windowBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HotSales" parent="Theme.Ecommerce">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
